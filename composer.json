{
    "name": "mroosz/php-cassandra",
    "type": "library",
    "description": "Cassandra client library with support for protocol v5 and asynchronous requests",
    "keywords" : [
        "cassandra",
        "nosql",
        "database",
        "cql",
        "driver",
        "client"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Michael Roosz",
            "email": "michael.roosz@web.de"
        },
        {
            "name": "Shen Zhenyu",
            "email": "zhenyupku@gmail.com"
        },
        {
            "name": "Evseev Nikolay",
            "email": "evseevnn@gmail.com"
        }
    ],
    "homepage": "https://github.com/MichaelRoosz/php-cassandra",
    "autoload": {
        "psr-4": { "Cassandra\\": "src/" }
    },
    "autoload-dev": {
        "psr-4": {
            "Cassandra\\Test\\": "test/"
        }
    },
    "require": {
        "php": ">=8.1"
    },
    "require-dev": {
        "ext-bcmath": "*",
        "ext-gmp": "*",
        "friendsofphp/php-cs-fixer": "^3.87.1",
        "phpstan/phpstan": "^2.1.22",
        "phpunit/phpunit": "^10.5.53",
        "vimeo/psalm": "^6.13.1"
    },
    "scripts": {
        "lint": "vendor/bin/php-cs-fixer check",
        "lint-fix": "vendor/bin/php-cs-fixer fix",
        "phpstan": "vendor/bin/phpstan analyse --memory-limit=1G",
        "phpstan:tests": "vendor/bin/phpstan analyse --memory-limit=1G --configuration phpstan.tests.neon",
        "psalm": "vendor/bin/psalm --no-cache",
        "phpunit": "XDEBUG_MODE=coverage vendor/bin/phpunit $@",
        "test:unit": "vendor/bin/phpunit --testsuite unit",
        "test:integration:up": "docker compose up -d",
        "test:integration:init": "bash .docker/wait-for-cassandra.sh",
        "test:integration:run": "APP_CASSANDRA_DEBUG=1 APP_CASSANDRA_HOST=127.0.0.1 APP_CASSANDRA_PORT=9142 vendor/bin/phpunit --testsuite integration",
        "test:integration:down": "docker compose down -v",
        "test:integration": "docker compose up -d && bash .docker/wait-for-cassandra.sh && APP_CASSANDRA_DEBUG=1 APP_CASSANDRA_HOST=127.0.0.1 APP_CASSANDRA_PORT=9142 vendor/bin/phpunit --testsuite integration && docker compose down -v"
    }
}

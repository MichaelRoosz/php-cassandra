{
    "name": "mroosz/php-cassandra",
    "type": "library",
    "description": "Cassandra client library with support for protocol v5 and asynchronous requests",
    "keywords" : [
        "cassandra",
        "nosql",
        "database",
        "cql",
        "driver",
        "client"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Michael Roosz",
            "email": "michael.roosz@web.de"
        },
        {
            "name": "Dennis Birkholz",
            "email": "birkholz@pubgrade.com"
        },
        {
            "name": "Shen Zhenyu",
            "email": "zhenyupku@gmail.com"
        },
        {
            "name": "Evseev Nikolay",
            "email": "evseevnn@gmail.com"
        }
    ],
    "homepage": "https://github.com/MichaelRoosz/php-cassandra",
    "require": {
        "php": ">=8.1.31"
    },
    "autoload": {
        "psr-4": { "Cassandra\\": "src/" }
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.75.0",
        "phpstan/phpstan": "^2.1.17",
        "phpunit/phpunit": "^10.5.51",
        "vimeo/psalm": "^6.12.0"
    },
    "scripts": {
        "lint": "PHP_CS_FIXER_IGNORE_ENV=1 vendor/bin/php-cs-fixer check",
        "lint-fix": "PHP_CS_FIXER_IGNORE_ENV=1 vendor/bin/php-cs-fixer fix",
        "phpstan": "vendor/bin/phpstan analyse",
        "psalm": "vendor/bin/psalm --no-cache",
    "phpunit": "XDEBUG_MODE=coverage vendor/bin/phpunit $@",
    "test:unit": "vendor/bin/phpunit --testsuite unit",
    "test:integration:up": "docker compose up -d",
    "test:integration:init": "bash .docker/wait-for-cassandra.sh",
    "test:integration:run": "APP_CASSANDRA_DEBUG=1 APP_CASSANDRA_HOST=127.0.0.1 APP_CASSANDRA_PORT=9042 vendor/bin/phpunit --testsuite integration",
    "test:integration:down": "docker compose down -v",
    "test:integration": "docker compose up -d && bash .docker/wait-for-cassandra.sh && APP_CASSANDRA_DEBUG=1 APP_CASSANDRA_HOST=127.0.0.1 APP_CASSANDRA_PORT=9042 vendor/bin/phpunit --testsuite integration && docker compose down -v",
    "ci": "composer lint && composer phpstan && composer test:unit"
    }
}
